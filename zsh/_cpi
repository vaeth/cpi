#compdef cpi mvi
local -a service_opts
case $service in
(*mv*)
	service_opts=(
'(-M)-C[act as cpi]'
);;
(*)
	service_opts=(
'(-f -C)-M[act as mvi]'
);;
esac

_arguments -s -S -A '-*' : \
'(* -)'{'-h','-H','-\\?'}'[help]' \
'-f[force asking for matching files in copy mode]' \
'-t+[Use ARG as destination]:destination directory/file:_files' \
${service_opts} \
'*::files or dirs:_files'
